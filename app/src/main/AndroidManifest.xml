<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.hiiyl.mmuhub" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name="com.github.hiiyl.mmuhub.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:excludeFromRecents="true"
            android:label="@string/title_activity_login"
            android:noHistory="true" >
        </activity>
        <activity
            android:name=".MMLS"
            android:label="@string/title_activity_mmls"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.github.hiiyl.mmuhub.MainActivity" />
        </activity>
        <activity
            android:name=".MMLSActivity"
            android:label="@string/title_activity_mmls" >
        </activity>
        <activity
            android:name=".AnnouncementDetailActivity"
            android:label="@string/title_activity_announcement_detail" >
            <meta-data
                android:name="android.support.MMLS_ACTIVITY"
                android:value="com.github.hiiyl.mmuhub.MMLSActivity" />
        </activity>
        <activity
            android:name=".BulletinActivity"
            android:label="@string/title_activity_bulletin" >
        </activity>
        <activity
            android:name=".DownloadActivity"
            android:label="@string/title_activity_download"
            android:parentActivityName=".MMLSActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.github.hiiyl.mmuhub.MMLSActivity" />
        </activity>
    </application>

</manifest>
